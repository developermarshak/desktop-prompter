{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Terminal Studio",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "bundle": {
      "identifier": "com.terminalstudio.demo"
    },
    "windows": [
      {
        "title": "Terminal Studio",
        "width": 1200,
        "height": 760,
        "resizable": true
      }
    ]
  }
}
