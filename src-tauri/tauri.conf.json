{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "desktop-prompter",
  "version": "0.1.5",
  "identifier": "com.mykytamarshak.desktop-prompter",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "desktop-prompter",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/developermarshak/desktop-prompter/releases/latest/download/latest.json"
      ]
    }
  }
}
